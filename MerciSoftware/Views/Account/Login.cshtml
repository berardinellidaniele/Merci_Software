@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form action="#" method="post">
			<h1>Compila Form</h1>
			<input type="text" placeholder="Nome" />
			<input type="email" placeholder="Email" />
			<input type="email" placeholder="Conferma Email" />
			<button type="submit">Registrati</button>
		</form>
	</div>

	<div class="form-container sign-in-container">
		<form action="/login" method="post">
			<h1>Log In</h1>

			@if (ViewBag.Errore != null)
			{
				<p style="color: red;">@ViewBag.Errore</p>
			}

			<input type="email" name="email" placeholder="Email" required />
			<input type="password" name="password" placeholder="Password" required />
			<a href="/recupera">Hai dimenticato la password?</a>
			<button type="submit">Log In</button>
		</form>
	</div>

	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Benvenuto!</h1>
				<p>Se possiedi già un account esegui l'accesso</p>
				<button class="ghost" id="signIn">Log In</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Benvenuto!</h1>
				<p>Se non hai un account, compila il form</p>
				<button class="ghost" id="signUp">Registrati</button>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/login.js" asp-append-version="true"></script>
}

<link rel="stylesheet" href="~/css/login.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
